@{
    Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<div class="info-container">
<h1>Edit</h1>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)
    <span>Name:</span>
    @Html.TextBoxFor(model => model.Name)<br><br>

    @Html.Label("Select a Flavor: ")
    @Html.DropDownList("FlavorId")
    
    <input type="submit" value="Save" class="btn btn-info">
}
</div>

<p>@Html.ActionLink("Back Treat List", "Index")</p>
<p>@Html.ActionLink("Go Home", "Index", "Home")</p>