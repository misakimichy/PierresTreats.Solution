@{
    Layout = "_Layout";
}

@model PierresTreats.Models.Treat

@if(@Model.Flavors.Count == 0)
{
    <h2>This book doens't contain any flavors.</h2>
    <hr />
}
else
{
    <h3>@Html.DisplayFor(model => model.Name)</h3><br>
    <ul>
    @foreach(var join in Model.Flavors)
    {
        <li>ðŸ”¸@join.Flavor.Name</li>
        @using (Html.BeginForm("DeleteFlavor", "Treats"))
        {
            @Html.Hidden("joinId", @join.FlavorTreatId)
            <input type="submit" value="Delete" class="btn btn-dark"/>
        }
        <hr />
    }
    </ul>
}
<div class="link-container">
    <p>@Html.ActionLink("Back to Treat List", "Index")</p>
    <p>@Html.ActionLink("Edit This Treat", "Edit", new { id = Model.TreatId})</p>
    <p>@Html.ActionLink("Add More Flavor", "AddFlavor", new { id = Model.TreatId})</p>
    <p>@Html.ActionLink("Delete This Treat", "Delete", new { id = Model.TreatId})</p>
</div>