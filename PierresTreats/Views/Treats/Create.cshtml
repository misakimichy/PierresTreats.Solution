@{
    Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<div class="info-container">
    <h2>Add a New Treat</h2><br>
    @using (Html.BeginForm())
    {
        <span>Name:</span>
        @Html.TextBoxFor(model => model.Name)<br><br>

        @Html.Label("Select a flavor: ")
        @Html.DropDownList("FlavorId")
        
        <input type="submit" value="Add" class="btn btn-info">
    }
</div>

<p>@Html.ActionLink("Back to Treat List", "Index")</p>
<p>@Html.ActionLink("Go Home", "Index", "Home")</p>