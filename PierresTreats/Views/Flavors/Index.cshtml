@{
    Layout = "_Layout";
}

@using PierresTreats.Models;
@model IEnumerable<PierresTreats.Models.Flavor>

<h2>List of Flavors</h2><br>
@if(Model.Any())
{
    <ul>
    @foreach (Flavor flavor in Model)
    {
        <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
        <hr />
    }
    </ul>
}
else
{
    <h3>There are no flavors added yet.</h3>
}

<p>@Html.ActionLink("Add New Flavor", "Create")</p>
<p>@Html.ActionLink("Go Home", "Index", "Home")</p>